{% extends 'DutafBundle::template.html.twig' %}

{% block title %}
    Catalogue - {{ parent() }}
{% endblock %}

{% block body %}
    <div align="center">
        <table style="width: 75%; text-align: center;">
            <tr>
                <th width="5%">#</th>
                <th width="">Référence</th>
                <th width="">Nom</th>
                <th width="">Prix</th>
                <th width="">Quantité</th>
                <th width="">Fournisseur</th>
                <th width="">Editer</th>
                <th width="">Supprimer</th>
            </tr>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.ref }}</td>
                    <td>{{ article.nom }}</td>
                    <td>{{ article.prix }}</td>
                    <td>{{ article.quant }}</td>
                    <td>{{ article.fournisseur.nom }}</td>
                    <td>
                        <a href="{{ path('dutaf_article_edit', {'id': article.id}) }}" class="btn btn-primary">
                            <i class="glyphicon glyphicon-cog"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('dutaf_article_delete', {'id': article.id}) }}" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                Pas encore d'articles !
            {% endfor %}
        </table>
    </div>
{% endblock %}