{% extends 'DutafBundle::template.html.twig' %}

{% block title %}
    Fournisseurs - {{ parent() }}
{% endblock %}

{% block body %}
    <div align="center">
        <table style="width: 75%; text-align: center;">
            <tr>
                <th width="5%">#</th>
                <th width="">Nom</th>
                <th width="">Tel</th>
                <th width="">Ville</th>
                <th width="">Editer</th>
                <th width="">Supprimer</th>
            </tr>
            {% for fournisseur in fournisseurs %}
                <tr>
                    <td>{{ fournisseur.id }}</td>
                    <td>{{ fournisseur.nom }}</td>
                    <td>{{ fournisseur.tel }}</td>
                    <td>{{ fournisseur.ville }}</td>
                    <td>
                        <a href="{{ path('admin_article_edit', {'id': fournisseur.id}) }}" class="btn btn-primary">
                            <i class="glyphicon glyphicon-cog"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('dutaf_article_delete', {'id': fournisseur.id}) }}" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                Pas encore de fournisseurs !
            {% endfor %}
        </table>
    </div>
{% endblock %}