                <li class="page-scroll">
                    <a href="{{ path('dutaf_article_view') }}">Catalogue</a>
                </li>
                {% if is_granted('ROLE_ADMIN') == true %}
                    <li class="page-scroll">
                        <a href="{{ path('admin_article_view') }}">Gestion articles</a>
                    </li>
                    <li class="page-scroll">
                        <a href="{{ path('admin_fournisseur_view') }}">Gestion fournisseurs</a>
                    </li>
                    <li class="page-scroll">
                        <a href="{{ path('logout') }}">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li class="page-scroll">
                        <a href="{{ path('login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% block body %}
{% endblock %}
</body>
{% block js %}
